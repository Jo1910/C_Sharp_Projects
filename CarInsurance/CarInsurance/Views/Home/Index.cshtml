<div class="row no-gutters m-3">
  <div class="card bg-light shadow col-sm-12 col-md-10 col-lg-6">
    <div class="card-header text-center">
      <h5 class="m-0">Please fill out the form to check your insurance quote</h5>
    </div>
    <div class="card-body">
      @using (Html.BeginForm("QuoteCalc", "Home", FormMethod.Post))
      {
        @Html.AntiForgeryToken()
        <div class="row no-gutters">
          <div class="form-group col-md-12">
            <input name="FirstName" type="text" class="form-control" placeholder="First Name" />
          </div>
          <div class="form-group col-md-12">
            <input name="LastName" type="text" class="form-control" placeholder="Last Name" />
          </div>
          <div class="form-group col-md-12">
            <input name="EmailAddress" type="email" class="form-control" placeholder="Email Address" />
          </div>
          <div class="form-group col-md-12">
            <input name="DateOfBirth" type="date" class="form-control" placeholder="Date of birth" />
          </div>
          <div class="form-group col-md-12">
            <input name="CarYear" type="number" class="form-control" placeholder="Car Year" />
          </div>
          <div class="form-group col-md-12">
            <input name="CarMake" type="text" class="form-control" placeholder="Car Make" />
          </div>
          <div class="form-group col-md-12">
            <input name="CarModel" type="text" class="form-control" placeholder="Car Model" />
          </div>
          <div class="form-group col-md-12">
            <label class="form-check-label">Have you ever had a DUI?</label><br />
            <input name="DUI" type="radio" class="form-check-inline" value="true" />Yes<br />
            <input type="radio" class="form-check-inline" value="false" />No<br />
          </div>
          <div class="form-group col-md-12">
            <label>How many speeding tickets have you had?</label>
            <input name="SpeedingTickets" type="number" value="0" min="0" class="form-control" placeholder="Speeding Tickets" required />
          </div>
          <div class="form-group col-md-12">
            <label class="form-check-label">Would you like a full coverage?</label><br />
            <input name="CoverageType" type="radio" class="form-check-inline" value="true" />Yes<br />
            <input type="radio" class="form-check-inline" value="false" />No<br />
          </div>
          <button type="submit" class="btn btn-block btn-primary">Submit</button>
        </div>
      }
    </div>
  </div>
</div>